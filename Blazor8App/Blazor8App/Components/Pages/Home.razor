@page "/"

<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>

<CascadingAuthenticationState>
    <AuthorizeView>
        <Authorized>
            <p class="alert alert-success">Welcome @context.User.Identity.Name</p>
        </Authorized>
        <NotAuthorized>
            <p class="alert alert-danger">Sorry you are not authorized!!!</p>
        </NotAuthorized>
    </AuthorizeView>
</CascadingAuthenticationState>

